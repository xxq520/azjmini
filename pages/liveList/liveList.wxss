/* pages/liveList/liveList.wxss */
page{
  background: #f5f5f5;
  padding-top: 20rpx
}
.liveList{
  width: 100%;
  padding: 3%;
  margin: 0 auto;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  height: 584rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  background: #fff;
}
.noneLive{
   width: 627rpx;
    margin: 0 auto;
    display: block
}
.liveList>image{
  width: 100%;
  height: 424rpx;
  border-radius: 20rpx
}
.liveList .liveList-box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff
}
.liveList-box>view{
  position: absolute
}
.title{
    font-size:28rpx;
    font-family:Hiragino Sans GB;
    font-weight:normal;
    color:rgba(33,33,33,1);
}
.authorName{
    font-size:26rpx;
    font-family:Hiragino Sans GB;
    font-weight:normal;
    color:rgba(102,102,102,1);
    margin-bottom: 10rpx
}
.timeR{
 display: flex;
  justify-content: space-between;
  margin: 16rpx 0 10rpx 0
}
.live-title{
}
.subTime{
    font-size:26rpx;
    font-family:Hiragino Sans GB;
    font-weight:normal;
    color:rgba(102,102,102,1);
}
.live-title view{
}
.live-title text{
  display: inline-block;
  width: 300rpx;
  margin-top: 10rpx
}
.live-status{
  width: 108rpx;
  height: 42rpx;
  position: absolute;
  border-radius: 30rpx;
    right: 50rpx;
background:rgba(0,0,0,.3);
    top: 148rpx;
  line-height: 42rpx;
  text-align: center;
  padding-left: 0rpx;
  font-size: 20rpx;
  text-align: center;
  color: #fff
}
.live-status{
  font-size: 22rpx
}
.live-status  text{
  font-size: 80rpx;
  color: #ff0600;
  width: 20rpx;
  position: absolute
}
.live-time{
  bottom: 30rpx;
  right: 30rpx
}
.live-time .start{
  font-size: 26rpx
}
.live-time .time{
  font-size: 42rpx
}
.videoBack{
  position: fixed;
  top: 50%;
  right: 20rpx;
  background:  rgba(255, 255, 255, 0.5);
  padding: 16rpx 24rpx;
  border-radius: 57rpx;
  color: #ff0600;
  font-size: 26rpx;
}
.denger{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    height: 40rpx
}
